<Window x:Class="QuizApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Налаштування" Height="250" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Поточний пароль:"/>
            <PasswordBox Name="CurrentPasswordBox"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Новий пароль:"/>
            <PasswordBox Name="NewPasswordBox"/>
            <Button Content="Змінити пароль" Width="120" Margin="0,5,0,0"
                    Click="BtnChangePassword_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Дата народження:"/>
            <DatePicker Name="BirthDatePicker"/>
            <Button Content="Змінити дату народження" Width="180" Margin="0,5,0,0"
                    Click="BtnChangeBirthDate_Click"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Закрити" Width="80" HorizontalAlignment="Right" Click="BtnClose_Click"/>
    </Grid>
</Window>