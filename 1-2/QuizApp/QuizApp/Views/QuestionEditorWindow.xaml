<Window x:Class="QuizApp.Views.QuestionEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор питання" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Текст питання:" FontWeight="Bold"/>
        <TextBox x:Name="QuestionTextBox" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Відповіді" FontWeight="Bold" />
            <ListBox x:Name="AnswerListBox" Height="100" DisplayMemberPath="Text"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Додати" Click="BtnAddAnswer_Click" Margin="0,0,5,0"/>
                <Button Content="Редагувати" Click="BtnEditAnswer_Click" Margin="0,0,5,0"/>
                <Button Content="Видалити" Click="BtnDeleteAnswer_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Зберегти" Width="75" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Відміна" Width="75" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
