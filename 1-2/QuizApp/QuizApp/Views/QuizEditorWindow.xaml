<Window x:Class="QuizApp.Views.QuizEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор вікторини" Height="180" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Назва вікторини:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Height="25"/>

        <TextBlock Text="Категорія:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,10,0,0">
            <ComboBoxItem>Розваги</ComboBoxItem>
            <ComboBoxItem>Загальні знання</ComboBoxItem>
            <ComboBoxItem>Музика</ComboBoxItem>
            <ComboBoxItem>Кіно</ComboBoxItem>
            <ComboBoxItem>Наука</ComboBoxItem>
        </ComboBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Зберегти" Width="75" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Відміна" Width="75" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>