<Window x:Class="QuizApp.Views.AnswerEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор відповіді" Height="200" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Текст відповіді"/>
        <TextBox x:Name="AnswerTextBox" Margin="0,5,0,10"/>
        <CheckBox x:Name="IsCorrectCheckBox" Content="Правильна відповідь"/>
        <Button Content="Зберегти" HorizontalAlignment="Right" Margin="0,10,0,0"
                Width="100" Click="BtnSave_Click"/>
    </StackPanel>
</Window>