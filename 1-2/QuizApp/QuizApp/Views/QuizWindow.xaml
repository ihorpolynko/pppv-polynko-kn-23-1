<Window x:Class="QuizApp.Views.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вікторина" Height="520" Width="700" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="QuizTitle" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Name="QuestionArea">
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="BtnPrev" Click="BtnPrev_Click" Width="100" Margin="0,0,8,0">Назад</Button>
            <Button Name="BtnNext" Click="BtnNext_Click" Width="100" Margin="0,0,8,0">Далі</Button>
            <Button Name="BtnFinish" Click="BtnFinish_Click" Width="120">Завершити вікторину</Button>
        </StackPanel>
    </Grid>
</Window>