<Window x:Class="QuizApp.Views.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мої результати" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFEEEEEE" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <TextBlock Text="Користувач: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Login}" Margin="5,0"/>
                <TextBlock Text=" | Дата народження: " FontWeight="Bold" Margin="20,0,0,0"/>
                <TextBlock Text="{Binding BirthDate, StringFormat=d}" Margin="5,0"/>
            </StackPanel>
        </Border>

        <ListView Name="ResultsList" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" Width="40" DisplayMemberBinding="{Binding ResultId}" />
                    <GridViewColumn Header="Вікторина" Width="150" DisplayMemberBinding="{Binding QuizTitle}" />
                    <GridViewColumn Header="Рахунок" Width="80" DisplayMemberBinding="{Binding Score}" />
                    <GridViewColumn Header="Дата" Width="200" DisplayMemberBinding="{Binding DateTaken}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>