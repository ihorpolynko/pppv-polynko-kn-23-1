<Window x:Class="QuizApp.Views.QuizEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор вікторини" Height="180" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Назва вікторини:" FontWeight="Bold"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="0,10,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Зберегти" Width="75" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Відміна" Width="75" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>