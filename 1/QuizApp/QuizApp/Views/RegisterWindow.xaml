<Window x:Class="QuizApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="320" Width="380" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Login" />
        <TextBox Name="LoginBox" Margin="0,4,0,8" Grid.Row="1"/>

        <TextBlock Text="Password" Grid.Row="2"/>
        <PasswordBox Name="PasswordBox" Grid.Row="3" Margin="0,4,0,8"/>

        <TextBlock Text="Birth date" Grid.Row="4"/>
        <DatePicker Name="BirthPicker" Grid.Row="5" SelectedDate="{x:Static sys:DateTime.Now}" Margin="0,4,0,8" xmlns:sys="clr-namespace:System;assembly=mscorlib"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Click="BtnCancel_Click" Width="100" Margin="0,0,8,0">Відміна</Button>
            <Button Click="BtnRegister_Click" Width="100">Зареєструватися</Button>
        </StackPanel>
    </Grid>
</Window>